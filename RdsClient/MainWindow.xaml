            <MenuItem Header="Pin to Start" x:Name="uc_RemoteAppContextMenu_PinToStart" Click="uc_RemoteAppContextMenu_PintToStart_Click"/>
            <MenuItem Header="Remove Server" x:Name="uc_RdsEx_AppMenu_RemoveServer" />
